<h1 layout horizontal flex center-justified id="reset_header">Password Reset</h1>

<%= form_for(@user, :url=>password_reset_path(params[:id])) do |f| %>
  <div layout horizontal flex center-justified>
  	<%= f.password_field :password, id: "reset_field", placeholder: "Password" %>
  </div>

  <div layout horizontal flex center-justified>
  	<%= f.password_field :password_confirmation, id: "reset_field", placeholder: "Password Confirmation" %>
  </div>
  
  <div layout horizontal flex center-justified>
    <%= f.submit "RESET PASSWORD", id: "submit_reset" %>
  </div>
<% end %>