<%= div_for comment do %>
	<hr class="show_hr">

	<div class="layout horizontal" style="padding:8px;">
		<%= image_tag comment.user.image_url(:avatar), id: "comment_author_avatar" %>
		<div id="comment_author">
			<%= comment.user.username %>
		</div>
	</div>
	
	<div id="comment_body">
		<%= raw comment.body %>
	</div>
	
	<div id="comment_posted_at">Posted <%= time_ago_in_words(comment.created_at) %> ago</div>
<% end %>