<% if @flag %>
	$('#whose_logged_in').html("<paper-toast id=\"toast1\" class=\"capsule\" text=\"<%= @status %>\" style=\"padding-right: 60px;\" duration=\"10000\" opened responsiveWidth=\"300px\"></paper-toast>");
	document.getElementById("overlay").toggle();
    $('#whose_logged_in').append("<div id=\"post_avatar\" style=\"background-image: url('<%= User.find_by_id(session[:user_id]).image_url(:avatar) %>');\"></div>");
    $('#whose_logged_in').append("<div id=\"usernames\" layout vertical center-justified><%= User.find_by_id(session[:user_id]).username %></div><paper-button id=\"logout_button\">Logout</paper-button>");
	$('#user_overlay').html('<%= escape_javascript(render partial: '/users/show' ) %>');
	<% if User.find_by_id(session[:user_id]).administrator %>
		$('#new_post_button_container').html("<paper-fab icon=\"add\" onclick=\"document.location='<%= new_post_path %>'\" id=\"new_post_button\"></paper-fab>");
	<% end %>
<% else %>
	$('#whose_logged_in').append("<paper-toast id=\"toast1\" class=\"capsule\" text=\"<%= @status %>\" style=\"padding-right: 60px;\" duration=\"10000\" opened responsiveWidth=\"300px\" style=\"color: #eeff41;\"></paper-toast>");
<% end %>

$("#text").fadeOut();

$('#usernames').on('click', function() {
  document.getElementById('overlay2').toggle();
});

$('#logout_button').on('click', function() {
  $('#logout_button_invis').click();
});

$("#manage_button_1").on('click', function() {
	document.location ='/users';
});

$("#manage_button_2").on('click', function() {
	document.location ='/inactive_posts';
});
