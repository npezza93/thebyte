<% if not @user.errors[:username].blank? %>
	$("#new-user-username").find('paper-input-error').html("<%= raw @user.errors[:username][0].capitalize %>");
	$("#new-user-username").attr('invalid', "")
<% else %>
	$("#new-user-username").removeAttr('invalid', '');
<% end %>

