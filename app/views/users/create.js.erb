<% if @flag %>
	$('#whose_logged_in').html("<paper-toast id=\"toast1\" class=\"capsule\" text=\"<%= @status %>\" style=\"padding-right: 60px;\" duration=\"10000\" opened responsiveWidth=\"300px\" style=\"color: #eeff41;\"></paper-toast>");
	document.getElementById("overlay").toggle();
	$('.log_out_in').html("<div class=\"usernames\" onclick=\"document.getElementById('overlay2').toggle()\"><%= User.find_by_id(session[:user_id]).username %></div><div id=\"logout_button\"><paper-button id=\"logout_button\" onclick=\"clicklogout()\">Logout</paper-button></div></div>");
	<% if (User.find_by_id(session[:user_id]).image_url) == nil%>
		$('.log_out_in').append("<div id=\"post_avatar\" style=\"background-image: url('../system/default_pic.png');\"></div>");
    <% else %>
    	$('.log_out_in').append("<div id=\"post_avatar\" style=\"background-image: url('<%= User.find_by_id(session[:user_id]).image_url(:avatar) %>');\"></div>");
    <% end %>
	$('#user_overlay').html('<%= escape_javascript(render partial: '/users/show' ) %>');
	<% if User.find_by_id(session[:user_id]).administrator %>
		$('#new_post_button_container').html("<paper-fab icon=\"add\" onclick=\"document.location='<%= new_post_path %>'\" id=\"new_post_button\"></paper-fab>");
	<% end %>
<% else %>
	$('#ajax_errors').html("<div id=\"signup_errors\" class=\"animated fadeInDown\" layout horizontal center-justified><ul id=\"ajax_errors_text\"><% @user.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul></div>");
<% end %>