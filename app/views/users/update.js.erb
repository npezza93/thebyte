<% if not @user.errors[:password].blank? %>
	$("#edit-user-password").find('paper-input-error').html("<%= raw @user.errors[:password][0].capitalize %>");
	$("#edit-user-password").attr('invalid', "");
<% else %>
	$("#edit-user-password").removeAttr('invalid', '');
<% end %>

<% if not @user.errors[:password_confirmation].blank? %>
	$("#edit-user-password-confirm").find('paper-input-error').html("<%= raw @user.errors[:password_confirmation][0].capitalize %>");
	$("#edit-user-password-confirm").attr('invalid', "");
<% else %>
	$("#edit-user-password-confirm").removeAttr('invalid', '');
<% end %>    

<% if @note %>
	$('#notice-toast').attr("text", "<%= @note %>");
	$('#notice-toast')[0].toggle();
<% end %>
